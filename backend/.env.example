# ============================================
# EFÍMERO MEZCAL - Variables de Entorno
# ============================================
# Copia este archivo como .env y configura los valores

# Base de datos
DB_HOST=localhost
DB_PORT=3306
DB_NAME=efimero_mezcal
DB_USER=root
DB_PASS=tu_password_aqui

# JWT
JWT_SECRET=cambia_este_secreto_por_uno_seguro_de_64_caracteres
JWT_EXPIRES_IN=15m
JWT_REFRESH_EXPIRES_IN=7d

# Server
PORT=3001
NODE_ENV=development

# URLs
FRONTEND_URL=http://localhost:5173
ADMIN_URL=http://localhost:5174

# MercadoPago
# Obtén tus credenciales en https://www.mercadopago.com.mx/developers
MP_ACCESS_TOKEN=
MP_PUBLIC_KEY=

# SMTP (para emails)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=
SMTP_PASS=
SMTP_FROM=noreply@efimero.mx

# Producción
# En producción, asegúrate de:
# - Usar HTTPS
# - Cambiar JWT_SECRET por uno muy seguro
# - Configurar FRONTEND_URL con tu dominio real
# - Configurar MercadoPago con credenciales de producción
